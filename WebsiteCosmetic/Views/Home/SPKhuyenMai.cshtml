@model List<Models.Framework.SpecificProduct>
<div class="swiper-wrapper">
    @foreach (var item in Model)
    {
        if (item.Offer != null)
        {
            <div class="product-default-single-item product-color--green swiper-slide">
                <div class="image-box">
                    <a href="/SanPham/ChitietSP/@item.SpId" class="image-link">
                        <img src="@item.Image" alt="">
                        <!-- <img src="/Assets/Font/images/product/default/home-2/default-2.jpg" alt=""> -->
                    </a>
                    <div class="tag">
                        <span>sale</span>
                    </div>
                    <div class="action-link">
                        <div class="action-link-left" id="btnAdd">
                            <a onclick="AddCart(@item.SpId)" >Thêm vào giỏ hàng</a>
                        </div>
                        <div class="action-link-right">
                            <a href="#" data-bs-toggle="modal" data-bs-target="#modalQuickview"><i class="icon-magnifier"></i></a>
                            <a href="/Home/AddWishlist/@item.SpId"><i class="icon-heart"></i></a>
                            <a href="compare.html"><i class="icon-shuffle"></i></a>
                        </div>
                    </div>
                </div>
                <div class="content">
                    <div class="content-left">
                        <h6 class="title"><a href="/SanPham/ChitietSP/@item.SpId">@item.Product.ProName</a></h6>
                        <ul class="review-star">
                            <li class="fill"><i class="ion-android-star"></i></li>
                            <li class="fill"><i class="ion-android-star"></i></li>
                            <li class="fill"><i class="ion-android-star"></i></li>
                            <li class="fill"><i class="ion-android-star"></i></li>
                            <li class="empty"><i class="ion-android-star"></i></li>
                        </ul>
                    </div>
                    <div class="content-right">
                        <span><del class="price">@item.Price</del> <span class="price">@(item.Price - item.Offer * item.Price)</span></span> 
                    </div>

                </div>
            </div>
        }
        
     }
    <!-- End Product Default Single Item -->
</div>
